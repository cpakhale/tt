{
  "mode": "All",
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Graph/applications"
        },
        {
          "anyOf": [
            {
              "allOf": [
                {
                  "field": "Microsoft.Graph/applications/passwordCredentials[*].endDateTime",
                  "exists": "true"
                },
                {
                  "count": {
                    "field": "Microsoft.Graph/applications/passwordCredentials[*]",
                    "where": {
                      "value": "[dateTimeAdd(utcNow(), concat('P', string(parameters('daysBeforeExpiry')), 'D'))]",
                      "greater": "[current('Microsoft.Graph/applications/passwordCredentials[*].endDateTime')]"
                    }
                  },
                  "greater": 0
                }
              ]
            },
            {
              "allOf": [
                {
                  "field": "Microsoft.Graph/applications/keyCredentials[*].endDateTime",
                  "exists": "true"
                },
                {
                  "count": {
                    "field": "Microsoft.Graph/applications/keyCredentials[*]",
                    "where": {
                      "value": "[dateTimeAdd(utcNow(), concat('P', string(parameters('daysBeforeExpiry')), 'D'))]",
                      "greater": "[current('Microsoft.Graph/applications/keyCredentials[*].endDateTime')]"
                    }
                  },
                  "greater": 0
                }
              ]
            }
          ]
        }
      ]
    },
    "then": {
      "effect": "[parameters('effect')]"
    }
  },
  "parameters": {
    "daysBeforeExpiry": {
      "type": "Integer",
      "metadata": {
        "displayName": "Days before expiry to trigger alert",
        "description": "Number of days before expiry to trigger the alert for application secrets and certificates"
      },
      "defaultValue": 30
    },
    "effect": {
      "type": "String",
      "metadata": {
        "displayName": "Effect",
        "description": "Enable or disable the execution of the policy"
      },
      "allowedValues": [
        "audit",
        "disabled"
      ],
      "defaultValue": "audit"
    }
  },
  "metadata": {
    "category": "Security",
    "version": "1.0.0",
    "displayName": "Audit Azure AD Applications with expiring secrets and certificates",
    "description": "This policy audits Azure AD Applications that have secrets or certificates expiring within the specified timeframe"
  }
}