kubectl get pods -o json | jq '[.items[] | {name: .metadata.name, status: .status.phase, ready: (.status.containerStatuses[] | select(.ready == true) | true) // false, restart: (.status.containerStatuses[] | .restartCount), age: ((now - (.metadata.creationTimestamp | fromdateiso8601)) / 86400 | floor | tostring + "d")}]'