kubectl get pods -o json | jq '[.items[] | {name: .metadata.name, status: .status.phase, restarts: .status.containerStatuses[0].restartCount}]'


kubectl get pods -o json | jq '[.items[] | {name: .metadata.name, status: .status.phase, age: (now - (.status.startTime | fromdateiso8601)) | floor | . / 86400 | tostring + "d"}]' > pods_status.json
