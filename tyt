package main

import (
	"fmt"
	"os"
	"os/exec"
)

func main() {
	if len(os.Args) != 4 {
		fmt.Println("Usage: go run get_vm_extension_status.go <resourceGroup> <vmName> <extensionName>")
		return
	}

	resourceGroup := os.Args[1]
	vmName := os.Args[2]
	extensionName := os.Args[3]

	cmd := exec.Command("az", "vm", "extension", "show",
		"--resource-group", resourceGroup,
		"--vm-name", vmName,
		"--name", extensionName,
		"--query", "instanceView.statuses",
		"--output", "table")

	output, err := cmd.CombinedOutput()
	if err != nil {
		fmt.Printf("Error running az command: %v\n", err)
		fmt.Println(string(output))
		return
	}

	fmt.Println("Extension Status:")
	fmt.Println(string(output))
}