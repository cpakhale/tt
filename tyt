apiVersion: v1
kind: Namespace
metadata:
  name: hacker-company
---
apiVersion: batch/v1
kind: Job
metadata:
  name: ping
  namespace: hacker-company
spec:
  template:
    spec:
      restartPolicy: Never
      containers:
        - name: ping
          image: busybox:latest
          command:
            - ping
            - google.com