apiVersion: batch/v1
kind: CronJob
metadata:
  name: build
  namespace: hacker-company
spec:
  schedule: "* * * * *"
  concurrencyPolicy: Forbid
  jobTemplate:
    spec:
      template:
        spec:
          restartPolicy: Never
          containers:
            - name: build
              image: g:latest
              workingDir: /mnt/src
              command:
                - sh
                - -c
                - goc -o build main.c
              volumeMounts:
                - name: src-volume
                  mountPath: /mnt/src
          volumes:
            - name: src-volume
              hostPath:
                path: /home/ubuntu/1171986-kubernetes-cronjob-basic-implementation/src
                type: Directory