apiVersion: v1
kind: Namespace
metadata:
  name: hacker-company
---
apiVersion: v1
kind: Pod
metadata:
  name: data
  namespace: hacker-company
  labels:
    role: data
spec:
  containers:
    - name: redis
      image: redis:buster
      ports:
        - containerPort: 6379
---
apiVersion: v1
kind: Service
metadata:
  name: data
  namespace: hacker-company
spec:
  type: NodePort
  selector:
    role: data
  ports:
    - port: 16379
      targetPort: 6379